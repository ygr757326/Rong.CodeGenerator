@using Rong.Volo.Abp.CodeGenerator.Vue.Models
@inherits Volo.Abp.TextTemplating.Razor.RazorTemplatePageBase<TemplateVueDetailDrawerModel>
@{

}
<template>
 <a-drawer v-model:visible="visible" title=" @Model.EntityName - 详情" width="800px">
   <!--  详情页面 -->
   <Detail ref="detailRef" v-if="visible"></Detail>
 </a-drawer>
</template>

<script setup lang="ts">

 import { ref, nextTick } from 'vue';
 import Detail from './detail.vue';
 import { AbsViewModal } from '#/common';

 const detailRef = ref<AbsViewModal | null>(null);
 const visible = ref<boolean>(false);

 function open(data) {
  visible.value = true;
  nextTick(() => {
    detailRef.value?.init(data);
  });
 }
 defineExpose({ open });

</script>

