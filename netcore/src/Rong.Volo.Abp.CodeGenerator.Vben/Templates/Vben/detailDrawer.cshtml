<template>
 <a-drawer v-model:visible="visible" title="@Model.EntityInfo.EntityName - 详情" width="800px">
   <!--  详情页面 -->
   <Detail v-if="visible" :id="id"></Detail>
 </a-drawer>
</template>

<script setup lang="ts">

 import { ref } from 'vue';
 import Detail from './detail.vue';

 const visible = ref<boolean>(false);
 const id = ref<string | null>(null);
 
 /**
  * 打开弹窗
  */
 function open(data) {
  visible.value = true;
  id.value = data.id;
 }

 defineExpose({ open });
</script>

