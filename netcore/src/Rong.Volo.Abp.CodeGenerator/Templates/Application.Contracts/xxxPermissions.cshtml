@inherits Volo.Abp.TextTemplating.Razor.RazorTemplatePageBase<Rong.Volo.Abp.CodeGenerator.TemplateModel>
using @{@Model.NameSpace}.Permissions;
using System.ComponentModel.DataAnnotations;
using Volo.Abp.Reflection;

namespace @{@Model.NameSpace}.@{@Model.SaveFolderName}.@{@Model.Entity}s
{
    /// <summary>
    /// @{@Model.EntityName} - 权限名称
    /// </summary>
    [Permission]
    public class @{@Model.Entity}Permissions
    {
        /// <summary>
        /// 权限组
        /// </summary>
        public const string GroupName = @{@Model.Project}Permissions.GroupName;

        /// <summary>
        /// 权限
        /// </summary>
        public static class Permissions
        {
            /// <summary>
            /// @{@Model.EntityName}管理
            /// </summary>
            [Display(Name = "@{@Model.EntityName}管理")]
            public const string Default = GroupName + ".@{@Model.Entity}";

            /// <summary>
            /// 创建
            /// </summary>
            public const string Create = Default + PermissionConsts.Create;
            /// <summary>
            /// 修改
            /// </summary>
            public const string Update = Default + PermissionConsts.Update;
            /// <summary>
            /// 删除
            /// </summary>
            public const string Delete = Default + PermissionConsts.Delete;
        }

        /// <summary>
        /// 获取所有权限
        /// </summary>
        /// <returns></returns>
        public static string[] GetAll()
        {
            return ReflectionHelper.GetPublicConstantsRecursively(typeof(@{@Model.Entity}Permissions));
        }
    }
}
